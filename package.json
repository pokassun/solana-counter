{
  "name": "solana-counter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "ts-node": "ts-node -O '{\"module\":\"commonjs\"}' ",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest -c test/jest.config.js",
    "solana:local": "solana config set --url http://localhost:8899",
    "solana:devnet": "solana config set --url https://devnet.solana.com",
    "program:debug": "export RUST_LOG=solana_runtime::system_instruction_processor=trace,solana_runtime::message_processor=debug,solana_bpf_loader=debug,solana_rbpf=debug",
    "program:build": "cd program && cargo build-bpf && cp ./target/deploy/spl_counter.so ./dist/spl_counter.so",
    "program:deploy": "yarn ts-node ./scripts/program-deploy.ts ./program/dist/spl_counter.so",
    "account:info": "yarn ts-node ./scripts/account-info.ts"
  },
  "dependencies": {
    "@solana/web3.js": "0.96.0",
    "borsh": "0.3.1",
    "bs58": "^4.0.1",
    "buffer-layout": "^1.2.0",
    "next": "10.0.9",
    "next-compose-plugins": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.35",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.2",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "autoprefixer": "10.2.5",
    "dotenv": "8.2.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "identity-obj-proxy": "3.0.0",
    "isomorphic-unfetch": "3.1.0",
    "jest": "26.6.3",
    "nock": "13.0.11",
    "postcss": "8.2.8",
    "prettier": "2.2.1",
    "tailwindcss": "2.0.3",
    "ts-jest": "26.5.3",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  }
}
